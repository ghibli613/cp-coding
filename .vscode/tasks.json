{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Compile",
            "type": "shell",
            "command": "g++",
            "linux": {
                "args": [
                    "-g",
                    "-Wall",
                    "-O2",
                    "-Wextra",
                    "-Wfloat-equal",
                    "-pedantic",
                    "-std=c++20",
                    "-D_GLIBCXX_DEBUG",
                    "-D_GLIBCXX_DEBUG_PEDANTIC",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ],
            },
            "windows": {
                "args": [
                    "-g",
                    "-Wall",
                    "-O2",
                    "-Wextra",
                    "-Wfloat-equal",
                    "-pedantic",
                    "-std=c++20",
                    "-D_GLIBCXX_DEBUG",
                    "-D_GLIBCXX_DEBUG_PEDANTIC",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
        },
        {
            "label": "C/C++: Run",
            "type": "shell",
            "linux": {
                "command": "${fileDirname}/${fileBasenameNoExtension}",
            },
            "windows": {
                "command": "${fileDirname}\\${fileBasenameNoExtension}",
            },
            "args": [
                // "0<",
                // "in.txt",
                // "1>",
                // "out.txt",
                // "2>&1"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            }
        },
        {
            "label": "C/C++: Stress Test",
            "type": "shell",
            "command": "python",
            "linux": {
                "args": [
                    "${workspaceFolder}/stress.py",
                    "${fileDirname}/${fileBasenameNoExtension}",
                ],
            },
            "windows": {
                "args": [
                    "${workspaceFolder}\\stress.py",
                    "${fileDirname}\\${fileBasenameNoExtension}",
                ],
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            }
        }
    ],
}